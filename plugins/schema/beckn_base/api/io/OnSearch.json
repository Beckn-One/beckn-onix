{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://beckn.org/schema/OnSearch",
  "type": "object",
  "properties": {
    "context": {
      "allOf": [
        {
          "$ref": "../schema/components.json#/$defs/Context"
        },
        {
          "properties": {
            "action": {
              "enum": [
                "on_search"
              ]
            }
          },
          "required": [
            "action"
          ]
        }
      ]
    },
    "message": {
      "type": "object",
      "properties": {
        "catalog": {
          "$ref": "../schema/components.json#/$defs/Catalog"
        }
      },
      "required": [
        "catalog"
      ]
    },
    "error": {
      "$ref": "../schema/components.json#/$defs/Error"
    }
  },
  "required": [
    "context"
  ]
}