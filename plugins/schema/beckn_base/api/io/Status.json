{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ondc.org/trv10/2.0.0/status",
  "type": "object",
  "properties": {
    "context": {
      "allOf": [
        {
          "$ref": "../schema/components.json#/$defs/Context"
        },
        {
          "type": "object",
          "properties": {
            "action": {
              "enum": [
                "status"
              ]
            }
          },
          "required": [
            "action"
          ]
        }
      ]
    },
    "message": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ref_id": {
          "$ref": "../schema/components.json#/$defs/Order"
        },
        "order_id": {
          "$ref": "../schema/components.json#/$defs/Order"
        }
      }
    }
  },
  "required": [
    "message",
    "context"
  ]
}