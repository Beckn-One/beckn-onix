{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ondc.org/trv10/2.0.0/update",
  "type": "object",
  "allOf": [
    {
      "$ref": "../beckn_base/api/io/update.json#"
    },
    {
      "$ref": "https://beckn.org/schema/update#"
    },
    {
      "$ref": "./init.json#/allOf/2"
    },
    {
      "properties": {
        "message": {
          "type": "object",
          "properties": {
            "order": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                }
              },
              "required": ["id"]
            },
            "update_target": {
              "type": "string",
              "pattern": "^[^,]+(,[^,]+)*$"
            }
          }
        }
      }
    }     
  ]
}